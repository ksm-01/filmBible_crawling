<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dev.benew.filmbiblecrawling.mapper.ChannelMapper">
    <resultMap id="channelMap" type="dev.benew.filmbiblecrawling.dto.ChannelDto">
        <id column="fb_channel_id" property="channelId" />
        <result column="fb_channel_name" property="channelName" />
        <result column="fb_channel_subscriber" property="channelSubscriber" />
        <result column="fb_channel_created_date" property="createdDate" />
        <result column="fb_channel_reg_date" property="channelRegDate" />
    </resultMap>

    <select id="findAllChannelId" resultType="String">
        select
            fb_channel_id
        from FB_CHANNEL
    </select>

    <select id="findChannelById" resultMap="channelMap">
        select
            *
        from FB_CHANNEL
        where fb_channel_id = #{channelId}
    </select>

    <insert id="saveChannel">
        insert into FB_CHANNEL (
                fb_channel_id,
                fb_channel_name,
                fb_channel_subscriber,
                fb_channel_created_date
        ) values (
                #{channelId},
                #{channelName},
                #{channelSubscriber},
                #{createdDate}
        )
    </insert>

    <update id="updateChannel">
        update FB_CHANNEL
            set
                fb_channel_name = #{channelName},
                fb_channel_subscriber = #{channelSubscriber}
        where fb_channel_id = #{channelId}
    </update>

</mapper>